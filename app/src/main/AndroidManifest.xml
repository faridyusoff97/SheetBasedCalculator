<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mmu.fyp.sheetbasedcalculator">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".calculator.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".graph.GraphActivity"
            android:label="Graph">

        </activity>
        <activity
            android:name=".help.HelpActivity"
            android:label="@string/help_activity_title">

        </activity>


        <activity
            android:name=".save.FileBrowserActivity"
            android:label="@string/save_activity_title">
        </activity>
        <activity
            android:name=".load.LoadFileActivity"
            android:label="@string/load_activity_title">
        </activity>
        <activity
            android:name=".about.AboutActivity"
            android:label="@string/about_activity_title">
        </activity>
    </application>
</manifest>